<Window x:Class="golobokov_pr2.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 2" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Задача 2: Дана строка, состоящая из русских слов, разделенных пробелами. Вывести строку с теми же словами в обратном порядке."
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="380" TextWrapping="Wrap"/>

        <TextBlock Text="Введите строку:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Margin="10,90,0,0"/>

        <Button Content="Обратить" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="ReverseWords_Click"/>

        <TextBlock Text="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0"/>
    </Grid>
</Window>
