<Window x:Class="golobokov_pr2.Task4Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 4" Height="400" Width="400">
    <Grid>
        <TextBlock Text="Задача 4: Дан массив a[1..n] и число b. Переставить числа так, чтобы слева стояли числа, меньшие или равные b, а справа - большие или равные b."
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="380" TextWrapping="Wrap"/>

        <TextBlock Text="Введите элементы массива (через пробел):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Margin="10,90,0,0"/>

        <TextBlock Text="Введите число b:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0"/>
        <TextBox Name="BInputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="10,160,0,0"/>

        <Button Content="Рассчитать" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" Click="Calculate_Click"/>

        <TextBlock Text="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,250,0,0"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,280,0,0"/>
    </Grid>
</Window>
