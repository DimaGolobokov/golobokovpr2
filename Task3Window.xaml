<Window x:Class="golobokov_pr2.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 3" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Задача 3: Дан целочисленный массив размера N. Определить максимальное количество его одинаковых элементов."
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="380" TextWrapping="Wrap"/>

        <TextBlock Text="Введите элементы массива (через пробел):" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0"/>
        <TextBox Name="InputTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Margin="10,90,0,0"/>

        <Button Content="Рассчитать" Width="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" Click="Calculate_Click"/>

        <TextBlock Text="Результат:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,180,0,0"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,210,0,0"/>
    </Grid>
</Window>
